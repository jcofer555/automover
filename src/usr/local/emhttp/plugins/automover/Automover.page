function formatDuration(secondsStr) {
  const seconds = parseInt(secondsStr.replace(/[^\d]/g, ''), 10);
  if (isNaN(seconds)) return null;

  const mins = Math.floor(seconds / 60);
  const secs = seconds % 60;

  return mins > 0
    ? `${mins}m ${secs}s`
    : `${secs}s`;
}

